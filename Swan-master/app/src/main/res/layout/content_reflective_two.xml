<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fatemeh.newtest.ReflectiveTwoActivity"
    tools:showIn="@layout/activity_reflective_two"
    android:background="@drawable/reflective2">

    <ImageButton
        android:id="@+id/Apple"
        android:layout_width="wrap_content"
        app:layout_widthPercent ="20%"
        android:layout_height="wrap_content"
        app:layout_heightPercent ="12%"
        app:layout_marginTopPercent="68%"
        app:layout_marginLeftPercent="12%"
        android:layout_gravity="bottom|right"
        android:onClick="AppleBtn"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/Oven"
        android:layout_width="wrap_content"
        app:layout_widthPercent ="20%"
        android:layout_height="wrap_content"
        app:layout_heightPercent ="12%"
        app:layout_marginTopPercent="68%"
        app:layout_marginLeftPercent="42%"
        android:layout_gravity="bottom|right"
        android:onClick="OvenBtn"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/River"
        android:layout_width="wrap_content"
        app:layout_widthPercent ="20%"
        android:layout_height="wrap_content"
        app:layout_heightPercent ="12%"
        app:layout_marginTopPercent="68%"
        app:layout_marginLeftPercent="70%"
        android:layout_gravity="bottom|right"
        android:onClick="RiverBtn"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="88%"
        android:onClick="closeApp"
        android:background="@android:color/transparent"
        android:src="@drawable/button_close" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="1%"
        android:onClick="startReflectiveOneActivity"
        android:background="@android:color/transparent"
        android:src="@drawable/button_back"/>

    <ImageButton
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="88%"
        android:onClick="startReflectiveThreeActivity"
        android:background="@android:color/transparent"
        android:src="@drawable/button_next"
        />
</android.support.percent.PercentRelativeLayout>
