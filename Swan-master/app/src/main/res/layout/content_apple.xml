<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:id="@+id/container">


    <ImageView
        android:id="@+id/apple_red"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="50%"
        android:src="@drawable/apple_red"
        />

    <ImageView
        android:id="@+id/apple_green"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="35%"
        app:layout_marginLeftPercent="25%"
        android:src="@drawable/apple_green"
        />

    <ImageView
        android:id="@+id/apple_yellow"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="80%"
        android:src="@drawable/apple_yellow"
        />



    <ImageView
        android:id="@+id/basket_green"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="15%"
        android:src="@drawable/basket_green"/>


    <ImageView
        android:id="@+id/basket_yellow"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="38%"
        android:src="@drawable/basket_yellow"/>



    <ImageView
        android:id="@+id/basket_red"
        android:layout_width="wrap_content"
        app:layout_heightPercent = "25%"
        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="27%"
        android:src="@drawable/basket_red"/>
    <ImageView
        android:id="@+id/instructions_apple"
        android:layout_width="wrap_content"
        app:layout_heightPercent="70%"
        android:layout_height="wrap_content"
        app:layout_widthPercent="25%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="0%"
        android:src="@drawable/instructions_apple"
        />
    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="88%"
        android:onClick="closeApp"
        android:background="@android:color/transparent"
        android:src="@drawable/button_close" />


    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="1%"
        android:onClick="startIntroductionActivity"
        android:background="@android:color/transparent"
        android:src="@drawable/button_back"/>

    <ImageButton
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="88%"
        android:onClick="startVidAppleOvenActivity"
        android:background="@android:color/transparent"
        android:src="@drawable/button_next"
        />


</android.support.percent.PercentRelativeLayout>